# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[Justfile]
indent_style = tab

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[*.tpl]
indent_style = space
indent_size = 2
